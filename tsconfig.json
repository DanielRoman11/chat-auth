{
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
}
